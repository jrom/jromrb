- if @post.errors.length > 0
  %ul{:class => 'errors'}
    - @post.errors.each do |error|
      %li= error
- if @post.new?
  %p
    %label{:for => 'url'}URL:
    %br
    %input{:type => 'text', :name => 'url', :value => @post.url}
%p
  %label{:for => 'title'}Title:
  %br
  %input{:type => 'text', :name => 'title', :value => @post.title}
%p
  %label{:for => 'introduction'}Introduction:
  %br
  %input{:type => 'text', :name => 'introduction', :value => @post.introduction}
%p
  %label{:for => 'body'}Body:
  %br
  %textarea{:name => 'body', :rows => 15, :cols => 88}= @post.body
