!!! Strict
%html
	%head
		%title= @title ? @title : "Jordi Romero"
		%link{:href => versioned_stylesheet('production'), :media => 'screen', :rel => 'stylesheet', :type => 'text/css'}
	%body{ :class => @body_class }
		%div#content
			%h1#header
				%a{:href => '/'} Jordi Romero
			= yield
			- if logged_in?
				%div#admin
					%ul
						%li
							%a{:href => '/'} Home
						%li
							%a{:href => '/articles/drafts'} Drafts
						%li
							%a{:href => '/articles/new'} New article
						%li
							%a{:href => '/logout'} Logout

	%script{:src=> versioned_javascript("highlight.pack"), :type=>"text/javascript"}
	%script{:type => "text/javascript"}
		hljs.initHighlightingOnLoad();
